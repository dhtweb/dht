@{
    Layout = "_Layout";
    ViewBag.Title = "磁力云 - DHT磁力链接搜索引擎";
    ViewBag.KeyWord = "磁力链接,磁力搜索,BT搜索,BT种子,BT种子搜索,种子搜索,高清BT,迅雷BT搜索,高清BT种子,bt种子搜索器";
    ViewBag.Description = "磁力云是一个DHT磁力链接搜索引擎，专注于提供磁力链接和BT种子文件搜索服务,你可以在这里搜索电影、美剧、综艺、软件、动漫、教程、游戏等BT资源和磁力链接。";
}
@section Header{
    <link rel="stylesheet" href="~/css/grumble.css">
}
<div class="index-search clearfix">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-10 col-md-offset-1">
                <div class="page-header">
                    <a href="/"><h1 class="main-logo hidden-xs"><img src="/images/mainlogo.png" alt="磁力云" title="磁力云 - DHT磁力链接搜索引擎" /></h1></a>
                    <span class="visible-xs"><h2>磁力云</h2>专业的磁力链接搜索引擎</span>
                </div>

                <div class="search-box index-search-box">
                    <form class="search_form" role="form" method="get" action="/search" name="search">
                        <div class="input-group">
                            <input name="" type="hidden" value="baidu" />
                            <input type="text" class="form-control sinput search new-input" name="kw" id="search" baiduSug="1" placeholder="从 @ViewBag.TorrentNum 个磁力链接资源中搜索">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">搜 索</button>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="hot-tags-index newhot">
                    <ul class="hot-tags list-inline">
                        <li class="hot-item newhot"><a href="#">热门搜索</a>：</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
@section Footer{
    <div id="new-footer" class="bt-footer">
        <div id="bottom-footer" class="container">
            <div class="pull-left">
                <p>
                    <strong><a href="/">ciliyun.cc</a></strong> Copyright © 2016 All Rights Reserved.
                </p>
            </div>
            <div class="pull-right hidden-xs">
                <p></p>
                <p>
                    <div class="btn-group dropup">
                        <a type="button" class="btn dropdown-toggle" data-toggle="dropdown">关于 | 教程 | DMCA  <span class="caret"></span></a>
                        <ul class="dropdown-menu new-dropdown-menu">
                            <li><a href="/about.html" rel="nofollow">关 于</a></li>
                            <li><a href="/tos.html" rel="nofollow">服务条款</a></li>
                            <li><a href="/dmca.html" rel="nofollow">DMCA</a></li>
                            <li><a href="/contact.html" rel="nofollow">联系我们</a></li>
                            <li class="divider"></li>
                            <li><a href="/jiaocheng.html">使用教程</a></li>
                        </ul>
                    </div>
                </p>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.grumble.min.js"></script>
    <script src="~/js/random.js"></script>
    <script>
        $('.pull-right').grumble(
            {
                text: '搜索帮助!',
                angle: 40,
                distance: 70,
                showAfter: 500,
                hideAfter: 8000,
                type: 'alt-',
            }
        );
    </script>
}
